<%- include('header'); -%>

<!-- Template for account deletion page -->
<div class="text-danger" style="margin-top: 30px; margin-bottom: 20px;">
  Do you really want to delete your user account? All your data will be immediately removed from the database and is not recoverable.
</div>
<form method="post" action="">
  <div class="form-group form-check">
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input" value="" id="acceptCheckbox">I accept
    </label>
  </div>
  <div class="form-group">
    <a href="<%= baseUrl %>account" class="btn btn-secondary">Back to Account settings</a>
    <button type="submit" class="btn btn-danger" id="deleteButton" disabled>Delete User Account</button>
  </div>
</form>
<script>
const acceptCheckbox = document.getElementById("acceptCheckbox")
const deleteButton = document.getElementById("deleteButton")

acceptCheckbox.onchange = (event) => {
  deleteButton.disabled = !acceptCheckbox.checked
}
</script>

<%- include('footer'); -%>
